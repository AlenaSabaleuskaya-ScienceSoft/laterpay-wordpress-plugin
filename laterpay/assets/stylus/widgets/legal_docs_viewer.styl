// Widget to display LaterPay legal documents for merchants within an iframe

#lp_legal-docs-iframe
    background-color            #4e5052
    display                     none
    position                    relative

    .lp_close-iframe
        background-color        #666
        border-radius           3px
        box-shadow              1px 1px 3px rgba(0, 0, 0, 0.21)
        color                   #4e5052
        font-size               1.5em
        font-weight             600
        height                  1.5em
        line-height             1.4em
        padding                 0.5em
        position                absolute
        right                   1.667em
        text-align              center
        top                     1em
        width                   1.5em

        &:hover
            background-color    $clickable-highlight
