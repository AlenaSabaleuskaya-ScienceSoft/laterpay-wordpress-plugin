// debugger pane

// debugger pane header with LaterPay vector logo ----------------------------------------------------------------------
.lp_debugger,
.lp_debugger h2
    font-family                     'Helvetica Neue', Helvetica, Arial, sans-serif

.lp_debugger
    background-color                hsl(0, 0%, 90%)
    bottom                          0
    box-shadow                      -1px 1px 6px hsla(0, 0%, 0%, 0.34)
    font-size                       14px
    height                          400px
    line-height                     1.5
    padding                         7px 5px 0 0
    position                        fixed
    z-index                         $zindex-overlayed_1
    transition                      0.25s ease-in-out

    h2
        font-size                   1.25em
        font-weight                 400
        line-height                 1
        margin                      0.4em 0 0.8em 6.75em

        &:before
            display                 block
            font-size               6em
            height                  0
            left                    -1.03em
            line-height             0
            position                relative
            top                     0.075em

.lp_debugger-tabs

.lp_debugger-tab

.lp_debugger-content
