#lp_debugger
  background        #e6e6e6
  border-radius     0 0 0 3px
  bottom            0
  box-shadow        1px 1px 6px rgba(0, 0, 0, 0.34)
  color             #545454
  height            400px
  left              0
  overflow-x        hidden
  overflow-y        auto
  position          fixed
  transition        height 1s linear
  width             100%
  z-index           9999

.lp_debugger_inner
  padding           1em

.lp_debugger_headline
  font-size         1.25em
  font-weight       400
  line-height       1
  margin            0.4em 0 0.8em 6.75em

.lp_debugger_headline:before
  display           block
  font-size         6em
  height            0
  left              -1.1em
  line-height       0
  position          relative
  top               0.075em

#lp_debugger table
  background        #fff
  border            0

#lp_debugger th,
#lp_debugger td
  border            0
  padding           0.5em

#lp_debugger pre
  background        #f1f1f1
  border            1px solid #ccc
  font-family       monospace, serif
  font-size         13px
  margin-bottom     0
  overflow          auto
  white-space       pre-wrap
  word-wrap         break-word

.lp_debugger_tab
  margin-bottom     1em

.lp_debugger_tab_headline
  font-size         120%
  padding           0.5em 0 0 0.5em

