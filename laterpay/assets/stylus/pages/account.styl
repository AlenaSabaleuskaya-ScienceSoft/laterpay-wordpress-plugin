// 'Account' tab in plugin backend

// API credentials -----------------------------------------------------------------------------------------------------
.lp_w-1-2
    ul.lp_fl-clearfix
        margin                  1.25em 0 -0.8em

        .lp_background-icon-spacer
            width               84px

    fieldset
        min-height              165px

        form:first-of-type
            margin-top          2em

.lp_w-1-2.lp_sandbox-credentials[data-icon],
.lp_w-1-2.lp_live-credentials[data-icon]
    &:before
        color                   $border
        position                absolute
        z-index                 -1

.lp_w-1-2.lp_sandbox-credentials[data-icon]:before
    font-size                   90px
    left                        26px
    top                         57px

.lp_w-1-2.lp_live-credentials[data-icon]:before
    font-size                   75px
    left                        15px
    top                         72px


// legal documents viewer ----------------------------------------------------------------------------------------------
#request-live-credentials a
    margin                      0.1em 0 0 1px

#legal-docs-frame
    background-color            #4e5052
    display                     none
    position                    relative

    .close-iframe
        background-color        #666
        border-radius           3px
        box-shadow              1px 1px 3px rgba(0, 0, 0, 0.21)
        color                   #4e5052
        font-size               1.5em
        font-weight             600
        height                  1.5em
        line-height             1.4em
        padding                 0.5em
        position                absolute
        right                   1.667em
        text-align              center
        top                     1em
        width                   1.5em

        &:hover
            background-color    $clickable-highlight


// responsiveness ------------------------------------------------------------------------------------------------------
@media (max-width:1050px)
    .lp_w-1-2
        .lp_sandbox-credentials[data-icon]:before
            font-size           75px
            left                24px
            top                 61px

        .lp_live-credentials[data-icon]:before
            font-size           60px
            left                14px
            top                 79px

    .lp_background-icon-spacer
        width                   70px

    input.lp_api-key-input[type=text],
    input.lp_merchant-id-input[type=text]
        width                   290px
