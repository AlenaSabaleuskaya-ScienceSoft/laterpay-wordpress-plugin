// add / edit post page in WordPress backend

// LaterPay vector logo for pricing and teaser metabox -----------------------------------------------------------------
#lp_post-pricing,
#lp_post-teaser
    h3 span
        left                        6.25em
        position                    relative

#lp_post-pricing h3 span:before,
#lp_post-teaser h3 span:before
    -moz-osx-font-smoothing         grayscale
    -webkit-font-smoothing          antialiased
    content                         'a'
    font-family                     laterpay-wordpress-icons !important
    font-size                       6em
    font-style                      normal !important
    font-variant                    normal !important
    font-weight                     normal !important
    left                            -1.05em
    line-height                     0
    position                        absolute
    speak                           none
    text-transform                  none !important
    top                             0.106em

#lp_post-teaser h3 span:before
    top                             0.11em


// pricing metabox -----------------------------------------------------------------------------------------------------
#lp_post-pricing
    a
        text-decoration             none

        // remove dotted outline from links
        &:focus,
        &:active,
        &:visited
            outline                 0 none

// enter / display post price section
#lp_post-price input[name=post-price]
    -webkit-transition-duration     0.4s
            transition-duration     0.4s

    &:disabled
        border-color                transparent
        color                       #333
        -webkit-transition-duration 0.4s
                transition-duration 0.4s

.lp_currency
    bottom                          0.75em
    color                           $text-lightest
    font-size                       1.5em
    padding-right                   0.33em


// select price type section
#lp_price-type
    border                          1px solid $border
    border-radius                   3px

    // switch for selecting price type
    ul.lp-toggle
        background-color            #e9e9e9
        margin                      0
        padding                     0

        li
            box-shadow              inset 1px 0 0 #ddd,
                                    inset 0 1px 0 rgba(255, 255, 255, 0.55)
            float                   left
            line-height             1.25
            margin                  0
            padding                 0.5em 0
            text-align              center
            width                   33.333%

            &:first-child
                border-radius       2px 0 0 2px
                box-shadow          inset 1px 1px 0 rgba(255, 255, 255, 0.55)

            &:last-child
                border-radius       0 2px 2px 0
                box-shadow          inset 1px 0 0 #ddd,
                                    inset -1px 1px 0 rgba(255, 255, 255, 0.55)

            &:hover
                background-color    $clickable-highlight

                a
                    color           $text-inverse

            a
                display             block
                height              2.5em

        .lp_selected,
        .lp_selected:hover
            background-color        #d5d5d5

        .lp_selected
            box-shadow              inset 0 1px 3px rgba(0, 0, 0, 0.34)

            a,
            &:hover a
                color               #a5a5a5
                cursor              default
                text-shadow         0 1px 0 #e9e9e9

        .lp_disabled
            a
                color               #d5d5d5
                cursor              default

            &:hover
                background-color    #e9e9e9

                a
                    color           #d5d5d5
                    cursor          default


    // details for selected price type
    #lp_price-type-details .lp_use-category-default-price
        ul,
        li
            margin                  0
            padding                 0

        li
            border-top              1px solid #fff

            &:nth-child(even)
                background-color    #f7f7f7

            &:last-child
                border-radius       0 0 1px 1px

            &:hover
                background-color    $background-highlight

            a
                display             block
                padding             0.5em 0.75em

                span
                    color           #888
                    float           right

            .lp_selected-category
                background-color    transparent

                a
                    color           #444
                    cursor          default

// TODO: this looks just a tiny little bit BAD:
#lp_price-type.expanded .lp_use-category-default-price li.lp_selected-category,
#lp_price-type #lp_price-type-details .lp_use-category-default-price li.lp_selected-category:nth-child(2n)
    background-color                $background-highlight

#lp_use-dynamic-pricing
    display                         block
    padding                         0.75em 0.25em 0


// teaser content metabox ----------------------------------------------------------------------------------------------
#lp_post-teaser dfn
    color                           #999
    display                         block
    font-style                      italic
    margin                          1em 0
