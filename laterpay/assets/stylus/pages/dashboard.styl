// 'Dashboard' tab in plugin backend

// Diagrams ------------------------------------------------------------------------------------------------------------
.lp_w-1-3
    float                           left

    h2
        margin                      $fs-1 0 0.4em
        text-align                  center

.lp_dashboard-graph
    height                          15 * $fs-1
    margin                          0 $fs-1 0 0

/* statistics rows */
.lp_statistics-row
    background                      $background-darker
    border-radius                   3px     // TODO
    margin                          $fs-1 $fs-1 $fs-1 0

    h2
        position                    relative
        top                         $fs-15

    ul
        margin                      0 $fs-1 0 0
        padding                     0

    li
        border-right                1px solid $border-lightest      // TODO
        color                       $text-lighter
        float                       left
        list-style-type             none
        margin                      $fs-025 0
        padding                     $fs-05 $fs-05 0 $fs-075
        text-align                  right

        &:last-child
            border                  0 none

    big
        color                       $text
        display                     block
        font-size                   $fs-15

    small,
    big small
        color                       $text-lighter
        font-size                   $fs-1

    big small
        font-size                   0.667em
        padding                     0 0 0 2px


// Top / bottom lists --------------------------------------------------------------------------------------------------
.lp_w-1-3 h3
    margin                          0 0 $fs-025

.lp_top-bottom-list
    margin                          0 0 $fs-1
    padding                         0

    li
        clear                       left
        list-style-type             none

    i
        display                     block
        font-style                  normal
        overflow                    hidden
        text-overflow               ellipsis
        white-space                 nowrap

    .peity
        float                       right
        margin                      0 $fs-1

    .lp_value
        color                       $text-lighter
        float                       left
        margin                      0 0.4em 0 0
        text-align                  right
        width                       5 * $fs-1

        small
            color                   $text-lightest
            font-size               $fs-08
            padding                 0 0 0 2px

    .lp_value-narrow
        width                       3 * $fs-1


