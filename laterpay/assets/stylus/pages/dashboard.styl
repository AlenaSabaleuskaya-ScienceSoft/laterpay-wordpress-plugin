h1 i {font-style:normal;}

.switcher {float:right; margin:1.6em 0 0 0; padding:0;}
.switcher li {background-color:#e5e5e5; float:left; list-style-type:none; margin:0;}
.switcher li:first-child {border-radius:6px 0 0 6px;}
.switcher li:last-child {border-radius:0 6px 6px 0;}
.switcher li.selected {background-color:#eee;}
.switcher .selected big,
.switcher .selected a:hover big,
.switcher .selected small {color:#e5e5e5;}
.switcher a {border-right:1px solid #eee; display:block; padding:.5em 1em 0.2em; width:65px;}
.switcher li:last-child a {border:0 none;}
.switcher a:hover big {color:#54cc76;}
.switcher big,
.switcher small {display:block; text-align:right;}
.switcher big {color:#4fc270; font-size:1.5em;}
.switcher div:hover {background-color:#54cc76;}
.switcher small {color:#aaa;}

.dashboard-graph {height:210px; margin:0 1em 0 0;}

.highlighted-box {background-color:rgba(246, 226, 118, 0.89); left:27%; position:absolute; top:24%; z-index:2;}

ol {margin:0 0 1.5em; padding:0;}
ol li {list-style-type:none;}
.top-bottom-list i {display:block; font-style:normal; overflow:hidden; text-overflow:ellipsis; white-space:nowrap;}
.top-bottom-list .peity {float:right; margin:0 1em;}
.top-bottom-list .value {color:#aaa; float:left; margin:0 0.4em 0 0; text-align:right; width:32px;}
.value.value-1 {width:33px;}
.value.value-2 {width:20px;}
.value.value-3 {width:68px;}
.top-bottom-list .value small {color:#c5c5c5; font-size:.8em; padding:0 0 0 2px;}



.statistics-row {background:#e5e5e5; border-radius:3px; margin:1em 1em 1.5em 0;}
.statistics-row h2 {position:relative; top:1.3em;}
.statistics-row ul {margin:0 1em 0 0; padding:0;}
.statistics-row li {
    border-right:1px solid #eee;
    color:#aaa;
    float:left;
    list-style-type:none;
    margin:.25em 0;
    padding:.5em 0.5em 0 0.75em;
    text-align:right;
}
.statistics-row li:last-child {border:0 none;}
.statistics-row big {color:#555; display:block; font-size:1.5em; height:1em;}
.statistics-row small,
.statistics-row big small {color:#aaa; font-size:1em;}
.statistics-row big small {font-size:.667em; padding:0 0 0 2px;}

