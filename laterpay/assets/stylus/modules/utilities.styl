// display -------------------------------------------------------------------------------------------------------------
.lp_d-blk
    display             block

.lp_d-inl
    display             inline

.lp_d-inl-blk
    display             inline-block

.lp_d-none
    display             none


// floating ------------------------------------------------------------------------------------------------------------
.lp_fl-left
    float               left

.lp_fl-right
    float               right

.lp_fl-none
    float               none

.lp_fl-clearfix:after
    clear               both
    content             ' '
    display             block
    font-size           0
    height              0
    visibility          hidden


// grid ----------------------------------------------------------------------------------------------------------------
.lp_row
    // no particular styles attached


// margins -------------------------------------------------------------------------------------------------------------
.lp_m-0
    margin              0

.lp_m-1
    margin              $fs-1

.lp_m-1-0
    margin              $fs-1 0

.lp_m-0-center
    margin              0 auto

.lp_m-1-center
    margin              $fs-1 auto


// position ------------------------------------------------------------------------------------------------------------
.lp_p-abs
    position            absolute

.lp_p-rel
    position            relative

.lp_p-fix
    position            fixed

.lp_p-t0
    top                 0

.lp_p-r0
    right               0

.lp_p-b0
    bottom              0

.lp_p-l0
    left                0


// text-align ----------------------------------------------------------------------------------------------------------
.lp_ta-left
    text-align          left

.lp_ta-right
    text-align          right

.lp_ta-center
    text-align          center


