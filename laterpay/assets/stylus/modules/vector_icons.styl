// load LaterPay icon font ---------------------------------------------------------------------------------------------
@font-face
    font-family         laterpay-wordpress-icons
    font-style          normal
    font-weight         normal
    src                 url(../fonts/laterpay-wordpress-icons_v096.eot)
    src                 url(../fonts/laterpay-wordpress-icons_v096.eot?#iefix)                   format('embedded-opentype'),
                        url(../fonts/laterpay-wordpress-icons_v096.woff)                         format('woff'),
                        url(../fonts/laterpay-wordpress-icons_v096.ttf)                          format('truetype'),
                        url(../fonts/laterpay-wordpress-icons_v096.svg#laterpay-wordpress-icons) format('svg')


// render vector icons from icon font ----------------------------------------------------------------------------------
// inject vector icon in pseudo element when 'data-icon' attribute is applied to an element
[data-icon]:before
    content             attr(data-icon)
    font-family         laterpay-wordpress-icons !important
    font-style          normal !important
    font-variant        normal !important
    font-weight         normal !important
    line-height         1
    padding-right       0.25em
    position            relative
    speak               none
    text-transform      none !important
    top                 0.1em


// inject vector icon in pseudo element when an 'laterpay-icon-' or 'laterpay-logo-' class is applied to an element
[class^='laterpay-icon-']:before,
[class^='laterpay-logo-']:before,
    font-family         laterpay-wordpress-icons !important
    font-style          normal !important
    font-variant        normal !important
    font-weight         normal !important
    line-height         1
    speak               none
    text-transform      none !important

// font smoothing
[data-icon]:before,
[class^='laterpay-icon-']:before,
[class^='laterpay-logo-']:before,
    -moz-osx-font-smoothing grayscale
    -webkit-font-smoothing  antialiased


// map font characters to icons ----------------------------------------------------------------------------------------
// LaterPay logo icon with 'LaterPay' lettering
.laterpay-logo:before
    content 'a'
// LaterPay logo icon only
.laterpay-logo-icon:before
    content 'b'

// edit icons
.laterpay-icon-add:before
    content 'c'
.laterpay-icon-edit:before
    content 'd'
.laterpay-icon-cancel:before
    content 'e'
.laterpay-icon-save:before
    content 'f'
.laterpay-icon-delete:before
    content 'g'

// API-related icons
.laterpay-icon-merchant-id:before
    content 'i'
.laterpay-icon-api-key:before
    content 'j'
.laterpay-icon-test-mode:before
    content 'h'
.laterpay-icon-live-mode:before
    content 'k'

// 'hide' icon (used in statistics pane)
.laterpay-icon-hide:before
    content 'l'
