.lp-page
    // headings --------------------------------------------------------------------------------------------------------
    h2,
    h3
        font-weight     400
        margin          1rem 0 0.5rem

    h2
        font-size       1.25rem

    h3
        font-size       1rem
        margin          0


    // links -----------------------------------------------------------------------------------------------------------
    a
        text-decoration none

        // remove dotted outline from links
        &:focus,
        &:active,
        &:visited
            outline     0 none


    // lists -----------------------------------------------------------------------------------------------------------
    ul,
    li
        list-style      none
        margin          0
        padding         0


    // rules -----------------------------------------------------------------------------------------------------------
    hr
        margin          1rem 0 3rem


    // explanatory texts -----------------------------------------------------------------------------------------------
    dfn
        color           #999
        font-style      italic


    // svg (used by icon fonts) ----------------------------------------------------------------------------------------
    svg
        overflow        hidden
