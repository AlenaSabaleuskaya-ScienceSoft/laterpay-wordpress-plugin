// Loaded on options page for LaterPay plugin

@charset "UTF-8";

@import 'objects/_variables';


h3 {
    margin: round(4 * $unit) 0 $unit;

    &:first-of-type {
        margin-top: $unit;
    }
}

.form-table {
    margin-top: 0;
}
.form-table th {
    font-weight: normal;
    padding-top: $unit;
    padding-bottom: $unit--05;
}
.form-table td {
    padding-top: $unit--05;
    padding-bottom: 0;
}

.regular-text.lp_numberInput {
    text-align: right;
    width: 4em;
}

.lp_appendedText {
    color: $text--lighter;
    padding-left: $unit--05;
}

p.submit {
    margin-top: round(4 * $unit);
}
