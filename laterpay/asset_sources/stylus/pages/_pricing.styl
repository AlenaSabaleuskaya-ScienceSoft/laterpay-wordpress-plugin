// 'Pricing' tab in plugin backend

// price type sections -------------------------------------------------------------------------------------------------
ul.lp_row h2 + hr {
    height: 2px;
}

ul.lp_row li:nth-child(1) h2 + hr {
    background-color: hsl(0, 0%, 83%);
}

ul.lp_row li:nth-child(2) h2 + hr {
    background-color: hsl(0, 0%, 65%);
}

ul.lp_row li:nth-child(3) h2 + hr {
    background-color: hsl(0, 0%, 46%);
}

.lp_spacer {
    height: 2.4em;
}

.lp_revenueModel {
    width: 3.5em;
}

span.lp_revenueModelLabel {
    background-color: hsl(0, 0%, 83%);
    color: $text--inverse;
    padding: 1px $unit--025;
}


// category default prices ---------------------------------------------------------------------------------------------
.select2-container,
.select2-drop,
.select2-search,
.select2-search input {
    margin-bottom: 32px;
    width: 10rem;
}

.lp_categoryTitle {
    min-width: 8.75em;
}


// time passes ---------------------------------------------------------------------------------------------------------
.lp_addTimePass.button {
    margin-bottom: $unit;
}

.lp_timePassWrapper {
    background: $background--darker;
    border-radius: 3px;
    margin-bottom: $unit;
    padding: $unit;

    .lp_timePass {
        margin-bottom: 0;
    }
}

.lp_timePass_editorContainer {
    display: inline-block;
    vertical-align: top;

    .lp_timePass_formColumn {
        display: inline-block;
        margin-right: $unit--2;
        vertical-align: top;

        td {
            padding: 0;
            vertical-align: middle;
        }
    }

    .lp_timePass__descriptionInput {
        height: 3em;
    }

    .lp_saveLink {
        margin-top: 1em;
        margin-left: 0.5em;
    }

    .lp_toggle__label--pass {
        width: 3.5em;

        .lp_toggle__input:checked ~ .lp_toggle__text {
            background: hsl(0, 0%, 80%);
        }
    }
}

// voucher editor
.lp_voucherRow {
    margin-top: $unit--05;
    margin-right: $unit;
}

.lp_voucherList .lp_voucherRow {
    float: left;
}


// bulk price editor ---------------------------------------------------------------------------------------------------
.button.button-primary.lp_m--l2 {
    margin-left: $unit--2;
}

/**
 * 1. Remove arrows from select
 */
select.lp_is-disabled {
    appearance: none; /* 1 */
    background-color: transparent;
    border-color: transparent;
    color: hsl(0, 0%, 20%);


    &::-ms-expand {
        display: none; /* 1 - IE */
    }
}

.lp_bulkOperation {
    width: 600px;

    span {
        line-height: 2.25em;
    }

    a {
        float: right;
    }
}


// responsiveness ------------------------------------------------------------------------------------------------------
@media (max-width:1279px) {
    .lp_editLink {
        margin-left: $unit--05;
    }

    ul.lp_row li:nth-child(3) br {
        display: none;
    }
}
