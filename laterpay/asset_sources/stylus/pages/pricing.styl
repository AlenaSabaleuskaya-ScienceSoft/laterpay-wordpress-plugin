// 'Pricing' tab in plugin backend

// price type sections -------------------------------------------------------------------------------------------------
ul.lp_row h2 + hr
    height                  2px

ul.lp_row li:nth-child(1) h2 + hr
    background-color        hsl(0, 0%, 83%)

ul.lp_row li:nth-child(2) h2 + hr
    background-color        hsl(0, 0%, 65%)

ul.lp_row li:nth-child(3) h2 + hr
    background-color        hsl(0, 0%, 46%)

.lp_spacer
    height                  2.4em

.lp_revenueModel
    width                   3.5em

span.lp_revenueModelLabel
    background-color        hsl(0, 0%, 83%)
    color                   $text-inverse
    padding                 1px $fs-025


// category default prices ---------------------------------------------------------------------------------------------
.select2-container,
.select2-drop,
.select2-search,
.select2-search input
    margin-bottom           32px
    width                   10rem

.lp_categoryTitle
    min-width               8.75em


// time passes ---------------------------------------------------------------------------------------------------------
.lp_addTimePass.button
    margin                 $fs-1 $fs-1 $fs-1 0

.lp_timePass_editorContainer
    float                   left

.lp_timePassEditor

    .lp_toggle_label
        width               4em

// color picker
.lp_colorPicker
    // ...

.lp_timePassEditor_colorInput
    // ...

.wp-picker-open
    display                 none

.wp-color-result
    height                  $fs-15
    margin                  0
    padding-left            $fs-1
    z-index                 $zindex-overlayed_1

.iris-picker
    z-index                 $zindex-overlayed_1


// bulk price editor ---------------------------------------------------------------------------------------------------
.button.button-primary.lp_u_m-l2
    margin-left             $fs-2

.lp_bulkPriceUnit.lp_is-disabled
    appearance              none    // remove arrows from select
    background-color        transparent
    border-color            transparent
    color                   hsl(0, 0%, 20%)

    // remove arrows from select in IE
    &::-ms-expand
        display             none

.lp_bulkOperation
    width                   600px

    span
        line-height         2.25em

    a
        float               right


// responsiveness ------------------------------------------------------------------------------------------------------
@media (max-width:1279px)
    .lp_editLink
        margin-left        $fs-05

    ul.lp_row li:nth-child(3) br
        display            none
