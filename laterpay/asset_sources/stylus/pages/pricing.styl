// 'Pricing' tab in plugin backend

// price type sections -------------------------------------------------------------------------------------------------
ul.lp_row h2 + hr
    height                  2px

ul.lp_row li:nth-child(1) h2 + hr
    background-color        hsl(0, 0%, 83%)

ul.lp_row li:nth-child(2) h2 + hr
    background-color        hsl(0, 0%, 65%)

ul.lp_row li:nth-child(3) h2 + hr
    background-color        hsl(0, 0%, 46%)

.lp_spacer
    height                  2.4em

.lp_revenueModel
    width                   3.5em

span.lp_revenueModelLabel
    background-color        hsl(0, 0%, 83%)
    color                   $text-inverse
    padding                 1px $fs-025


// category default prices ---------------------------------------------------------------------------------------------
.select2-container,
.select2-drop,
.select2-search,
.select2-search input
    margin-bottom           32px
    width                   10rem

.lp_categoryTitle
    min-width               8.75em


// time limited passes ------------------------------------------------------------------------------------------------
.lp_pass-container
    margin-bottom           $fs-1
    margin-left             0
    white-space             nowrap

.lp_pass-cover
    background              url(../img/pass-cover.png) no-repeat
    border-bottom           1px solid $border
    border-right            1px solid $border
    height                  120px
    margin                  0
    width                   254px

    h2
       font-size            2em
       margin               0.5em

    p
       font-size            0.9em
       height               36px
       overflow             hidden
       padding-left         1em
       text-overflow        ellipsis
       width                160px

.lp_passTermsLink
    color                   $background-laterpay
    margin-left             10px

.lp_passes_editor
    border                  1px solid red
    white-space             nowrap
    width                   640px

    div
        border              1px solid red
        padding             0
        padding-left        10px
        white-space         normal
        width               320px

.lp_passItem
    white-space             nowrap

    input
        height              2.2em
        padding             0

    select
        height              2.2em
        margin-top          3px

#lp_js_passValidAmount,
#lp_js_passValidNumber
    width                   50px

#lp_js_passDescription
    height                  60px

#lp_passTitle,
#lp_js_passDescription,
#lp_passBackground
    left                    470px
    position                absolute
    width                   220px

input[type=text].lp_inputShort,
input[type=number].lp_inputShort
    padding                 0
    text-align              right
    width                   50px

#lp_js_passAccessTo,
#lp_js_passCat
    width                   260px

// color picker
.lp_colorPickerContainer
    display                 inline-block
    left                    695px
    position                absolute

.wp-picker-open
    display                 none

.wp-color-result
    height                  20px
    margin                  0
    padding-left            10px
    top                     2px
    z-index                 $zindex-overlayed_1

.iris-picker
    z-index                 $zindex-overlayed_1


// bulk price editor ---------------------------------------------------------------------------------------------------
.button.button-primary.lp_u_m-l2
    margin-left             $fs-2

.lp_bulkPriceUnit.lp_is-disabled
    appearance              none    // remove arrows from select
    background-color        transparent
    border-color            transparent
    color                   hsl(0, 0%, 20%)

    // remove arrows from select in IE
    &::-ms-expand
        display             none

.lp_bulkOperation
    width                   600px

    span
        line-height         2.25em

    a
        float               right


// responsiveness ------------------------------------------------------------------------------------------------------
@media (max-width:1279px)
    .lp_editLink
        margin-left        $fs-05

    ul.lp_row li:nth-child(3) br
        display            none
