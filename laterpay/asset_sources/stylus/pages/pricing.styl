// 'Pricing' tab in plugin backend

// price type sections -------------------------------------------------------------------------------------------------
ul.lp_row h2 + hr
    height                  2px

ul.lp_row li:nth-child(1) h2 + hr
    background-color        hsl(0, 0%, 83%)

ul.lp_row li:nth-child(2) h2 + hr
    background-color        hsl(0, 0%, 65%)

ul.lp_row li:nth-child(3) h2 + hr
    background-color        hsl(0, 0%, 46%)

.lp_spacer
    height                  2.4em

.lp_revenueModel
    width                   3.5em

span.lp_revenueModelLabel
    background-color        hsl(0, 0%, 83%)
    color                   $text-inverse
    padding                 1px $fs-025


// category default prices ---------------------------------------------------------------------------------------------
.select2-container,
.select2-drop,
.select2-search,
.select2-search input
    margin-bottom           32px
    width                   10rem

.lp_categoryTitle
    min-width               8.75em


// bulk price editor ---------------------------------------------------------------------------------------------------
.button.button-primary.lp_u_m-l2
    margin-left             $fs-2

.lp_bulkPriceUnit.lp_is-disabled
    appearance              none    // remove arrows from select
    background-color        transparent
    border-color            transparent
    color                   hsl(0, 0%, 20%)

    // remove arrows from select in IE
    &::-ms-expand
        display             none

.lp_bulkOperation
    width                   600px

    span
        line-height         2.25em

    a
        float               right


// responsiveness ------------------------------------------------------------------------------------------------------
@media (max-width:1279px)
    .lp_editLink
        margin-left        $fs-05

    ul.lp_row li:nth-child(3) br
        display            none

// time timited passes ------------------------------------------------------------------------------------------------
.lp_pass-container
    white-space             nowrap
    margin-left             0px
    margin-bottom           15px
.lp_pass-cover
    background-repeat       no-repeat
    height                  120px
    margin                  0px
    width                   254px
    background-image        url('../img/pass-cover.png')
    border-bottom           1px solid grey
    border-right            1px solid grey
    h2
       margin               0.5em
       font-size            2em                                                         !important
    p
       width                160px
       font-size            0.9em
       height               36px 
       overflow             hidden
       text-overflow        ellipsis
       padding-left         1em
.lp_passTermsLink
    color                   green
    margin-left             10px
.lp_purchaseLink.lp_button
    font-size               18px                                                       !important;
    width                   100p
    top                     -10px  !important;
    float                   left !important;
    margin-left             10px
.lp_passes_editor
    white-space             nowrap
    width                   640px
    border                  1px solid red
    div
        width               320px;
        border              1px solid red
        padding             0px
        padding-left        10px
        white-space         normal
        item
            white-space     nowrap
            input
                height      2.2em !important
                font-size   0.9em
                padding     0px
            select
                height      2.2em !important
                font-size   0.9em
                margin-top  3px