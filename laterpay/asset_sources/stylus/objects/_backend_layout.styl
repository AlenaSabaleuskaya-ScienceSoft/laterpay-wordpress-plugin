// content area --------------------------------------------------------------------------------------------------------
.lp_page {
    min-height: 100%;
}

.lp_pagewrap {
    max-width: 1240px;
    padding: $unit;
}

.lp_row {
    // no particular styles attached
}


// tabs ----------------------------------------------------------------------------------------------------------------
.lp_navigation {
    background-color: $background--lightest;
    border-bottom: 1px solid $border--darker;
    box-shadow: 0 1px 0 $background--lightest;
    left: -20px;
    padding-top: $unit--2;
    width: 101.6%;
}

ul.lp_navigation_tabs {
    margin-left: $unit--2;

    li {
        display: inline-block;
        margin-left: $unit--15;
        position: relative;
        top: 2px;

        &:first-child {
            margin-left: 0;
        }

        a {
            color: $text--lighter;
            font-size: $unit;
            padding: $unit--05 $unit $unit--075;
        }

        &:hover a {
            color: $clickable;
        }
    }

    .lp_current {
        background-color: $background;
        border-radius: 4px 4px 0 0;
        border-top: 4px solid $clickable;

        &:hover a,
        a {
            color: $text;
            cursor: default;
            font-weight: bold;
        }
    }
}


// plugin mode indicator -----------------------------------------------------------------------------------------------
.lp_pluginModeIndicator {
    right: 7rem;
    top: 0.4rem;

    // LaterPay logo (rendered in pseudo element from icon font)
    &:before {
        float: left;
        font-size: 4rem;
        left: -2.75rem;
        line-height: 0;
        position: relative;
        top: 1.8rem;
    }

    h2,
    i {
        color: $clickable;
    }

    &:hover,
    &:active,
    &:focus {
        &:before,
        h2,
        i {
            color: $clickable--highlight;
        }
    }

    h2 {
        font-size: $unit--2;
    }

    i {
        font-style: normal;
    }

    span {
        color: hsl(0, 0%, 60%);
    }
}


// flash messages ------------------------------------------------------------------------------------------------------
/**
 * 1. Always show flash message at top of screen, even if page is scrolled down
 */
.lp_flashMessage {
    box-shadow: 0 1px 4px 0 hsla(0, 0%, 0%, 0.55);
    margin: 0;
    opacity: 0.9;
    position: fixed; /* 1 */
    top: 2.5rem; /* 1 */
    width: 96%;
    z-index: $z--overlayed-1;
}


// contextual help -----------------------------------------------------------------------------------------------------
// WordPress selector
#screen-meta {
    position: absolute;
    z-index: $z--elevated-1;
}

// WordPress selector
#contextual-help-link-wrap {
    z-index: $z--elevated-2;
}


// responsiveness ------------------------------------------------------------------------------------------------------
@media (max-width:1279px) {
    .lp_pagewrap {
        padding: 0;
    }
}
