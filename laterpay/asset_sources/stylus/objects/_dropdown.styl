/**
 * Dropdown component
 */

.lp_dropdown {
    cursor: pointer;
    display: inline-block;
    position: relative;

    .lp_dropdown_currentItem {
        color: $clickable;
    }
}

/* Reveal dropdown_list on hover or when state class 'is-expanded' is added */
.lp_dropdown:hover,
.lp_dropdown.lp_is-expanded {
    .lp_dropdown_list{
        display: block;
    }
}

.lp_dropdown_list {
    background: $background--lightest;
    border: 2px solid $border;
    border-radius: 3px;
    display: none;
    left: 50%;
    margin-left: -3em;
    padding: $unit--05;
    position: absolute;
    top: $unit--3;
    width: 6em;
    z-index: $z--overlayed-1;

    /* upward-pointing arrow */
    .lp_triangle {
        border: 13px solid $background--lightest;
        border-color: transparent transparent $background--lightest transparent;
        height: 0;
        left: -13px;
        pointer-events: none;
        position: absolute;
        top: -10px;
        width: 0;
        z-index: $z--elevated-2;
    }
    /* outline for upward-pointing arrow */
    .lp_outerTriangle {
        border-bottom-color: $border;
        border-width: 14px;
        left: 50%;
        margin-left: -14px;
        top: -28px;
        z-index: $z--elevated-1;
    }
}

.lp_dropdown_listItem {
    display: block;
    line-height: 1;
    padding: $unit--05;
    white-space: nowrap;
}

/**
 * Highlight the selected item and remove all styling that makes it look as if you could interact with it
 */
.lp_dropdown_listItem.lp_is-selected {
    color: $text--lighter;

    &:hover {
        color: $text--lighter;
        cursor: default;
    }
}
