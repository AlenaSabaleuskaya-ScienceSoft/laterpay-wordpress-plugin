// base units / font sizes ---------------------------------------------------------------------------------------------
$unit                           = 14px // the one true base unit, from which all else inherits

$unit--125                      = round(1.25  * $unit)
$unit--15                       = round(1.5   * $unit)
$unit--175                      = round(1.75  * $unit)
$unit--2                        = round(2     * $unit)
$unit--3                        = round(3     * $unit)

$unit--08                       = round(0.8   * $unit)
$unit--075                      = round(0.75  * $unit)
$unit--05                       = round(0.5   * $unit)
$unit--025                      = round(0.25  * $unit)


// colors --------------------------------------------------------------------------------------------------------------
// text colors
$text                           = hsl(0, 0%, 33%)

$text--lighter                  = hsl(0, 0%, 67%)
$text--lightest                 = hsl(0, 0%, 80%)

$text--inverse                  = hsl(0, 0%, 100%)


// colors for clickable items (links, buttons, etc.)
$clickable                      = hsl(197, 100%, 32%)

$clickable--highlight           = hsl(197, 63%, 49%)


// background colors
$background                     = hsl(0, 0%, 95%)

$background--darker             = hsl(0, 0%, 89%)

$background--lightest           = hsl(0, 0%, 100%)

$background--highlight          = hsl(51, 98%, 76%)


// LaterPay brand colors
$laterpay-brand                 = hsl(137, 54%, 56%)
$laterpay-brand--darker         = hsl(137, 49%, 54%)

$laterpay-brand--highlight      = hsl(137, 61%, 59%)


// border colors
$border                         = hsl(0, 0%, 87%)

$border--darker                 = hsl(0, 0%, 80%)
$border--darkest                = hsl(0, 0%, 40%)

$border--lightest               = hsl(0, 0%, 98%)


// z-indexes -----------------------------------------------------------------------------------------------------------
$z--recessed               = -1

$z--base                   = 0

// elements on the base layer that need to stick out
$z--elevated-1             = 10
$z--elevated-2             = 11
$z--elevated-3             = 12

// elements that float over the base layer
$z--overlayed-1            = 100
$z--overlayed-2            = 110
$z--overlayed-3            = 120

// elements that must never be covered
$z--topmost-1              = 1000000
$z--topmost-2              = 1000010
$z--topmost-3              = 1000020
