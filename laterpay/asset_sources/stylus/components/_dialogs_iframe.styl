// LaterPay dialogs iframe component

.laterpay-overlay {
    background-color: hsl(0, 0%, 0%) !important;
    height: 100% !important;
    left: 0 !important;
    opacity: 0.89 !important;
    position: fixed !important;
    top: 0 !important;
    width: 100% !important;
    z-index: $z--topmost-1 !important;
}

.laterpay-iframe {
    height: 100% !important;
    left: 0 !important;
    padding-top: $unit--2 !important;
    position: fixed !important;
    top: 0 !important;
    width: 100% !important;
    z-index: $z--topmost-2 !important;

    iframe {
        border: 0 none;
    }

    .laterpay-dialog-close-button {
        color: $text !important;
        padding: $unit $unit $unit $unit--2 !important;
        position: absolute !important;
        right: 0 !important;
        text-decoration: none !important;
        top: 0 !important;

        &:hover {
            color: hsl(0, 0%, 60%) !important;
            text-decoration: none !important;
        }
    }

    .laterpay-dialog-close-button[data-icon] {
        &:before {
            background-color: $text !important;
            border-radius: $unit !important;
            color: hsl(0, 0%, 0%) !important;
            margin-right: round(0.4 * $unit) !important;
            padding: round(0.1 * $unit) !important;
            position: relative !important;
            top: round(0.15 * $unit) !important;
        }

        &:hover:before {
            background-color: hsl(0, 0%, 60%);
        }
    }
}


// responsiveness ------------------------------------------------------------------------------------------------------
@media (max-width:567px) {
    .laterpay-iframe .laterpay-dialog-close-button {
        padding: round(0.2 * $unit) $unit--05 $unit $unit--2 !important;
    }
}
